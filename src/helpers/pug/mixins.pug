include ./variables.pug

mixin links (path)
  li: a(href= path + "/") الرئيسية
  li: a(href= path + "/pages/menu.html") القائمة
  li: a(href= path + "/pages/booking.html") الحجز
  li: a(href= path + "/pages/galary.html") المعرض
  li: a(href= path + "/pages/contact-us.html") اتصل بنا
  li: a(href= path + "/pages/about.html") عن الموقع

mixin header (path) 
  .logo: a(href= path + "/"): img(src= path + "/imgs/logo.png")
  .dropmenu: div: i.fa-solid.fa-bars(role="button")
  .overlay
    button.close(aria-label="إغلاق القائمة", type="button") X 
    ul.menu
      +links(path)
  nav(aria-label="القائمة الرئيسية"): ul
    +links(path)

mixin head (title, path)
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href= path + "/css/layout.css")
    link(rel="stylesheet", href= path + "/css/all.min.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Tajawal:wght@200;300;400;500;700;800;900&display=swap")
    link(rel="shortcut icon", href= path + "/imgs/logo.png", type="image/x-icon")
    link(rel="preload", href= path + "/imgs/logo.png", as="image")
    //- base(href="/armonia-italia/dist/")
    title #{title}

mixin heading (text)
  h2.head - #{text} -

mixin menu
  +heading("القائمة")
  ul
    li.button.active(data-type="appetizers") المقبلات
    li.button(data-type="main") الأطباق الرئيسية
    li.button(data-type="pizza") البيتزا
    li.button(data-type="deserts") الحلويات
    li.button(data-type="drinks") المشروبات
  .cards

mixin map 
  .map-container
    iframe(src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d2382.861675272914!2d31.20537407735465!3d30.0541788695238!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sar!2seg!4v1719263310357!5m2!1sar!2seg",style="border: 0",allowfullscreen="",loading="lazy",referrerpolicy="no-referrer-when-downgrade" title="موقع المطعم على الخريطة")

mixin galary (num, path)
  .galary-container
    - for(let i= 1; i <= num; i++)
      .img
        img(src=path + "/imgs/galary/chef" + i + ".png" alt="طباخ المطعم")
        h2 طباخ المطعم
      .img
        img(src=path + "/imgs/galary/food" + i + ".png" alt="طعامنا")
        h2 طعامنا
      .img
        img(src=path + "/imgs/galary/kitchen" + i + ".png" alt="مطبخنا")
        h2 مطبخنا 
      .img
        img(src=path + "/imgs/galary/rest" + i + ".png" alt="مطعمنا")
        h2 مطعمنا
